<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header>
        <nav>
            <div>
                <div>
                    <h1>Sortir.com</h1>
                    <!-- Ajoutez ceci où vous voulez afficher la date et l'heure actuelles -->
                    <p>Heure actuelle : {{ "now"|date("Y-m-d H:i:s") }}</p>

                </div>
                <div>
                    {% if not app.user %}
                        <a href="{{ path('app_login') }}">Se connecter</a>
                    {% endif %}
                    {% if app.user %}
                        <a href="{{ path('app_participant_affichageProfil') }}">Bonjour {{ app.user.pseudo }}</a>
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    {% endif %}
                </div>
            </div>
            <div>
                <a href="{{ path('app_sorties_list') }}">Accueil</a>
            </div>
        </nav>
    </header>
    <main>
        {% block body %}{% endblock %}
    </main>
    <footer>
        <p>Sortir.com / Eni / Team Y'a Quoi ©</p>
    </footer>
    </body>
</html>
